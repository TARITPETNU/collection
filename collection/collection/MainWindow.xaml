<Window x:Class="collection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:collection"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="addBtn" Content="Add" HorizontalAlignment="Left" Margin="37,169,0,0" VerticalAlignment="Top" Width="200" Height="90" Click="addBtn_Click"/>
        <Button x:Name="removeBtn" Content="Remove" HorizontalAlignment="Left" Margin="278,169,0,0" VerticalAlignment="Top" Width="200" Height="90" Click="removeBtn_Click"/>
        <Button x:Name="showBtn" Content="Show all" HorizontalAlignment="Left" Margin="525,169,0,0" VerticalAlignment="Top" Width="200" Height="90" Click="showBtn_Click"/>
        <TextBox x:Name="listTxt" HorizontalAlignment="Left" Height="23" Margin="37,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="688"/>
    </Grid>
</Window>
